@model AMSS.Models.OrderDetail

@{
    ViewBag.Title = "Index";
}

<h2>Cart:</h2>

@if (ViewBag.NoFood)
{
    <div>No food in your cart!</div>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.OrderListFoods)
        {
            <tr>
                <td>
                    @item.Food.FoodName
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Food.FoodPrice
                </td>
                <td>
                    <form method="delete" action="/OrderDetails/Delete/">
                        <input type="hidden" name="id" value="@item.OrderDetailId" />
                        <button class="btn btn-danger justify-content-center" type="submit">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </table>


    <div>Total: @ViewBag.TotalPrice</div>
    <div>
        <form action="/Orders/New/">
            <label for="Address">Address:</label>
            <input type="text" name="Address" value="" required="required"/>
            <button class="btn btn-success justify-content-center" type="submit">Order</button>
        </form>
    </div>
}