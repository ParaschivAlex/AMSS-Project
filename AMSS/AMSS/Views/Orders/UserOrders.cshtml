@model AMSS.Models.Order
@{
    int index = 1;
    ViewBag.Title = "UserOrders";
}

@if (ViewBag.NoOrders)
{
    <div>You have no orders placed yet!</div>
}
else
{
    <h2>Your orders:</h2>

    <table class="table">
        <tr>
            <th>
                Index
            </th>
            <th>
                Address
            </th>
            <th>
                Payment
            </th>
            <th>
                Date
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.Orders)
        {
            <tr>
                <td>
                    @index
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Payment
                </td>
                <td>
                    @item.OrderDate
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a class="btn btn-success" href="/Orders/Show/@item.OrderId" style="display: inline-block; margin-right: 1em;">View Details</a>
                </td>
            </tr>
            index++;
        }
    </table>
}

<a class="btn btn-success" href="/OrderListS/Index" style="display: inline-block; margin-right: 1em;">Go Back To Cart</a>

