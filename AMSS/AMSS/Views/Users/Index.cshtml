<div class="row">
    <div class=" col-md-12">
        <h3><strong>Users</strong></h3>
        @foreach (var user in ViewBag.UsersList)
        {
            <div class="panel-heading">UserName: @user.UserName</div>

            <div class="panel-body">

                <i class="glyphicon glyphicon-envelope"></i> User Email: <span class="label label-default">@user.Email</span>

                <br /><br />
            </div>

            <div class="panel-footer">

                <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id"> Edit</a>
                <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id"> View</a>

            </div>

            <br /><br />
        }
    </div>
</div>